<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.asmarasusanto.myapplication.ProfileActivity">

    <android.support.v7.widget.CardView
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="12dp"
        android:id="@+id/view2"
        app:cardCornerRadius="50dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:thicknessRatio="1.9"
        android:layout_marginTop="20dp">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp" />

    </android.support.v7.widget.CardView>

    <TextView
        android:text="Nama Perusahaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profilenama"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilenama"
        android:layout_alignEnd="@+id/profilenama"
        android:id="@+id/profilestatus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilestatus"
        android:layout_alignStart="@+id/profilestatus"
        android:id="@+id/profilealamat"
        android:text="Alamat" />

    <TextView
        android:text="Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilealamat"
        android:layout_alignEnd="@+id/profilealamat"
        android:id="@+id/profilephone" />

    <TextView
        android:text="Tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilephone"
        android:layout_alignStart="@+id/profilephone"
        android:id="@+id/profiletanggal" />

    <TextView
        android:text="Cabang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profiletanggal"
        android:layout_alignStart="@+id/profiletanggal"
        android:id="@+id/profilecabang" />

    <TextView
        android:text="Acara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/profilecabang"
        android:id="@+id/profileacara" />

    <TextView
        android:text="Menerima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileacara"
        android:layout_alignStart="@+id/profileacara"
        android:layout_marginTop="11dp"
        android:id="@+id/profilemenerima" />

    <TextView
        android:text="JangkaWaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilemenerima"
        android:layout_alignEnd="@+id/profilemenerima"
        android:id="@+id/profilejangka" />

    <TextView
        android:text="Timbal Balik "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilejangka"
        android:layout_alignEnd="@+id/profilejangka"
        android:id="@+id/profiletimbal" />

    <TextView
        android:text="Sponsor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profiletimbal"
        android:layout_alignStart="@+id/profilemenerima"
        android:id="@+id/profilesponsor" />

</RelativeLayout>
