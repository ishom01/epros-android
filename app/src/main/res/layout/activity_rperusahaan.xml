<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rperusahaan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asmarasusanto.myapplication.RPerusahaanActivity"
    android:background="#737A7F">

    <TextView
        android:text="Form Perusahaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/pusername"
        android:hint="Username"
        android:padding="10dp"
        android:background="#ffffff"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint="Password"
        android:padding="10dp"
        android:background="#ffffff"
        android:layout_below="@+id/pusername"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/rpassword"
        android:hint="Re type Password"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:background="#ffffff"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp" />

    <Button
        android:text="lanjut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pnext"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/pemail"
        android:hint="Email"
        android:padding="10dp"
        android:background="#ffffff"
        android:layout_below="@+id/rpassword"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/namaperusahaan"
        android:hint="Nama Perusahaan"
        android:layout_below="@+id/pemail"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:background="#ffffff"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ptelp"
        android:hint="No Telp Perusahaan"
        android:layout_below="@+id/namaperusahaan"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:background="#ffffff"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/pcabang"
        android:hint="Cabang Perusahaan"
        android:layout_below="@+id/ptelp"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:padding="10dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Alamat Perusahaan"
        android:id="@+id/palamat"
        android:layout_below="@+id/pcabang"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:background="#ffffff"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
